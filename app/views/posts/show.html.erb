=end%>

<%= render @post %>
<% if user_signed_in? && (current_user.admin? || @post.user == current_user) %>
  <div class= "container mb-5">
    <%= link_to "Edit this post", edit_post_path(@post),  class: "btn btn-secondary mb-2" %> |
    <%= link_to "Back to posts", posts_path, class: "btn btn-secondary mb-2" %>
    <div class="mb-2">
    <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger " %>
    </div>


<%end%>

</div>
<div class="container mb-2">
  <div class="text-center border-success" style="padding: 10px;">
    <h2 class="border-bottom border-success rounded p-3 mb-5" style="display: inline-block;">Comments</h2>
  </div>



  <div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
          <%= render @post.comments %>
        </div>
    </div>
    
    <div class="col-sm-6 mb-3 mb-sm-0">
      <div class="card">
        <div class="card-content">
        <h5 class="card-header">Write New Comment</h5>
          <p class="card-text">
            <%= render "comments/form", post: @post %>
          </p>
        </div>
      </div>
    </div>
  </div>

