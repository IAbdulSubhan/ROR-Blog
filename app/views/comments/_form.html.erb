<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
  <div class="container">
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  </div>
<% end %>



